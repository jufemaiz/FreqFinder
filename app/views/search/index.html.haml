.container.search
	.column.span-12.prepend-6.append-6.last
		%h2 Find a Radio Station

		/ Search Form
		= form_tag '/', :method => 'get'  do
			
			%fieldset
				%legend Search

				.input.geolocate
					%label{ :for => "geolocate" } Search using your current location
					= submit_tag "Locate me!", :name => "geolocate", :id => "geolocate"
					
				.input.text
					%label{ :for => "qo" } Street (optional)
					= text_field_tag :qo, @qo
					
				.input.text
					%label{ :for => "q" } Suburb/Town & State or Postcode
					= text_field_tag :q, @q

				.input.submit
					= submit_tag "Search", :name => nil
		/ /Search Form
